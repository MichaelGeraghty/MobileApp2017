<Page
    x:Class="Dota2SB.View4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dota2SB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--Grid features used so app fits well on everyscreen size and orientation-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/tobi.jpg" Stretch="UniformToFill"  AlignmentX="Center" AlignmentY="Center"/>
        </Grid.Background>
        <!-- *for auto adjustment will fill all available size on screen-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>

        <Button x:ConnectionId='1' x:Name="btn1" Grid.Row="0" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Admiral Bulldog Bot</Button>
        <Button x:ConnectionId='2' x:Name="btn2" Grid.Row="1" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Double Rapier and Gem</Button>
        <Button x:ConnectionId='3' x:Name="btn3" Grid.Row="2" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Instantly Natures Prophet</Button>
        <Button x:ConnectionId='4' x:Name="btn4" Grid.Row="3" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >It's An Illusion</Button>
       
        <Button x:ConnectionId='5' x:Name="btn5" Grid.Row="0" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Short Disaster</Button>
        <Button x:ConnectionId='6' x:Name="btn6" Grid.Row="1" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Long Disaster</Button>
        <Button x:ConnectionId='7' x:Name="btn7" Grid.Row="2" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Make Some Noise</Button>
        <Button x:ConnectionId='8' x:Name="btn8" Grid.Row="3" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >No One Has Ever</Button>
        
        <Button x:ConnectionId='9' x:Name="btn9" Grid.Row="0" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                       >Playing The Ultimate Rat</Button>
        <Button x:ConnectionId='10' x:Name="btn10" Grid.Row="1" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                         >Straight For The Buildings</Button>
        <Button x:ConnectionId='11' x:Name="btn11" Grid.Row="2" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                         >Theres a Hook</Button>
        <Button x:ConnectionId='12' x:Name="btn12" Grid.Row="3" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground = "White"                         >Waow</Button>
    </Grid>
</Page>

